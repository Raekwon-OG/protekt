// filepath: apps/api/prisma/schema.prisma
// Prisma schema for Protekt MVP: Org and User models.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id        String  @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  users     User[]
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  role         String  @default("MEMBER")
  orgId        String
  org          Org     @relation(fields: [orgId], references: [id])
  createdAt    DateTime @default(now())
}

model EmailScanLog {
  id             String   @id @default(cuid())
  from           String?
  subject        String?
  text           String?
  urls           Json
  verdictSummary String
  phishingCount  Int      @default(0)
  details        Json
  orgId          String?      // optional if you may not have org context
  createdByUserId String?     // optional â€” remove if not in schema
  createdAt      DateTime @default(now())
}

model Device {
  id           String   @id @default(uuid())
  orgId        String
  name         String
  type         String
  status       String?   // e.g., Online / Offline
  agentVersion String?
  risk         String?   // Low / Medium / Critical
  lastSeen     DateTime? @default(now())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // If you have an Organization/Org model, uncomment the relation below and adjust the field name
  // org        Organization @relation(fields: [orgId], references: [id])
  @@index([orgId])
}

